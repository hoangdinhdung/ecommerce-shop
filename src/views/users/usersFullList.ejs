<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head', {title: 'Bộ sưu tập'}) %>   <!--// partial Head //-->
    <body>
        
        <%- include('../partials/header') %>   <!--// partial Header //-->

        <main class="d-flex fd-col">
        
            <h1 class="lk-title-list">NGƯỜI DÙNG</h1>

            <h2 class="lk-title-list">Người quản lý</h2>
            <div class="lk-mainbox-list" style="justify-content: center!important;">
                <% for ( manager of manager) { %>
                    <article class="lk-articlebox-list">
                        <a href="/">
                            <div class="justify-center opac-img">
                                <img src="/img/users/<%= manager.image %>" alt="imagen de usuario">
                            </div>
                            <div class="casual-index">
                                <p class="marg-0 name-size"><%= manager.first_name %> <%= manager.last_name %></p>
                            </div>
                            <div class="casual-index">
                                <p class="font-roboto "><%= manager.email %></p>
                            </div>
                        </a>
                    </article>
                <% } %>
            </div>

            <div class="marg-nonside-50"></div>
            <div class="marg-nonside-50"></div>

